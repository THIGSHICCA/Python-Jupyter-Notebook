class book():
    def __init__(self, name, serial_no, type, number):
        self.name = name
        self.serial_no = serial_no
        self.type = type
        self.number = number
        
    def lend(self, count):
        self.numbers = self.numbers - count
        print(f'number of lend {self.name} books are {self.number}')
        
        
        
    def recieved(self, count):
            self.number = self.number + count
            print(f'number of recieved {self.name} books are : {self.number}')
        
        
